<style type="text/css">
  #rol{
    list-style: none;
  }
  #rol ul.acciones{
    list-style: none;
  }
  #rol h3{
    clear:both;
  }
  ul.acciones>li {
    background-position:center right !important;
    padding:4px 20px 4px 15px;
    float: left;
  }
</style>
<h1>Rol <%= @rol %></h1>

<p class="links">
  <%= link_to "Listado", roles_path %>
</p>
<ul id="rol">
<% @rol.permissions.each do |permission| %>
  <li><h3><%= permission.controller.titleize %></h3>
    <ul class="acciones">
      <% permission.actions.each do |k, v| -%>
        <li class="<%= v %>"><%= k %></li>
      <% end %>
    </ul>
  </li>

<% end %>
</ul>
