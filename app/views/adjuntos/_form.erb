<% form_for(@adjunto, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </p>
  <p>
    <%= f.label :archivo %><br />
    <%= f.file_field :archivo %>
  </p>
  <p>
    <%= f.submit 'Adjuntar' %>
  </p>
<% end %>