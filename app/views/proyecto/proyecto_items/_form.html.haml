= simple_form_for @proyecto_item, :url => url do |f|
  = f.error_messages
  %h3= @proyecto.titulo
  %p
    = f.input :descripcion
  %p
    = f.input :estado, :collection=>['Solicitdado','Apropiado','Cobrado','Pagado']
  %p
    = f.input :referencia_cliente
  %p
    = f.input :referencia_cliente_cobranza
  %p
    = f.input :fecha_limite
  %p
    = f.input :honorarios
  %p
    = f.input :gastos_adminitrativos
  %p
    = f.input :monto
  %p
    = f.input :fecha_solicitud
  %p
    = f.button :submit, 'Guardar'

