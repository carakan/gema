.proyecto
  %h1 Datos del proyecto
  = show_for @proyecto do |p|
    .percent_40= p.attribute :titulo
    .percent_40= p.attribute :id, :label => 'Nº Proyecto'
    .percent_40= p.association :area
    .percent_40= p.attribute :referencia_cliente
    .percent_40= p.association :representante
    .percent_40= p.association :contactos
    .percent_40= p.attribute :created_at, :label => 'Fecha creación'
    .percent_40= p.attribute :prioridad

  = render :partial => "/proyecto/correspondencias/listado", :locals => {:correspondencias => @proyecto.correspondencias.paginate(:per_page=>5, :page=>params[:page])}
  %br
  = render :partial => "/proyecto/proyecto_items/listado", :locals => {:proyecto_items => @proyecto.item_cobros}
  %br
  = render :partial => "/proyecto/instrucciones/listado", :locals =>{:instrucciones => @proyecto.instruccions}

  %p
    =# link_to "Editar Proyecto", edit_proyecto_proyecto_path(@proyecto),:class => "edit"

    =# link_to "Destruir", @proyecto, :confirm => 'Are you sure?', :method => :delete
 
    = link_to "Ver listado", proyecto_proyectos_path, :class => 'new'
