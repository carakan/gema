- title "Proyecto"

%p= link_to "Nuevo Proyecto", new_proyecto_proyecto_path, :class => 'new'
%table.providers-data-table
  %thead
    %tr
      %th Id
      %th Cliente
      %th Area
      %th Titulo
      %th Referencia cliente
      %th Prioridad
      %th
      %th
  %tbody
    - for proyecto in @proyectos 
      %tr
        %td= proyecto.id
        %td= proyecto.representante
        %td= proyecto.area.try(:sigla)
        %td= proyecto.titulo
        %td= proyecto.referencia_cliente
        %td= proyecto.prioridad
        %td= link_to 'Mostrar', proyecto
        %td= link_to 'Eliminar',proyecto, :confirm => 'Are you sure?', :method => :delete, :class => "delete"
/= will_paginate(@proyectos)
