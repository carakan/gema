.fieldset.correspondencia{:"data-group" => "correspondencia"}
  - if defined?(contador)
    .contar
      = contador
    = f.input(:contador, :as => :hidden, :input_html => {:value => contador})
  - else
    .contar
    = f.input(:contador, :as => :hidden)
  = f.input :orden,:label =>'Fecha: ', :hint=>'Incluya la fecha de esta correspondencia'
  
  = f.input :temporal_id, :as => :hidden, :input_html => {:value => "new_correspondencias"}
  = f.collection_radio :tipo, [[true, 'Recibido'] ,[false, 'Enviado']], :first, :last, :checked  => true
  = f.input :asunto, :label =>'Asunto:', :hint =>'Indique el asunto o cabecera del email', :input_html => {:"data-id" => "new_correspondencias"}
  = f.input :contenido, :input_html => {:cols=>100, :rows=>5}, :hint => "Escriba el contenido de la correspondencia", :label=>'Contenido:'
  %div
    %a.a_adjuntar_archivo_correspondencia{:href => "javascript:", :class => "new", :"data-id" => "new_correspondencias"} Adjuntar archivo
  - if !defined?(contador)
    = remove_child_link "Quitar", f
:javascript
  $('a.a_adjuntar_archivo_correspondencia').click(function() {
    var tiempo = ( new Date() ).getTime().toString();
    var tiempo_email = $(this).attr("data-id");
    var name_field = "";
    if(tiempo_email > 0){
      name_field = 'proyecto_proyecto[correspondencias_attributes]['+ tiempo_email +'][adjuntos_attributes][' + tiempo + ']';
    } else {
      name_field = "proyecto_correspondencia[adjuntos_attributes][" + tiempo + ']';
    }
    console.debug(tiempo_email, name_field, $(this).attr("data-id") == "new_correspondencias");
    var input = $('<input/>').attr({
    'name': name_field + "[archivo]",
    'type': 'file',
    'size': 20
    });
    var input2 = $('<input/>').attr({
    'name': name_field + "[nombre]",
    'type': 'text'
    });
    var del = '<a href="javascript:" class="adjunto_delete">borrar</a>';
    var uno = $("<div class='percent_50'/>").append('<label>descripcion</label>').append(input2);
    var dos = $("<div class='percent_50'/>").append('<label>archivo</label>').append(input);
    li = $('<li/>').append(uno).append(dos).append(del)
    $(this).parent().append( li );
    $.mark(li, 7);
  });

