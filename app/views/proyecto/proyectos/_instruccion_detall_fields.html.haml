.fieldset
  %table{:border=>0}
    %tr
    %td
      .input
        = f.label :usuario_id, "Usuario"
        = f.select :usuario_id, grouped_options_for_select(Usuario.all_for_areas)
    %td
      = f.input :tarea,:as => :text, :input_html => {:cols => 60, :rows => 1}
    %td
      = f.input :fecha_limite, :as => :date
  = link_to 'Tarea Subordinada'
  = link_to 'Tarea Coordinada'
  = remove_child_link "Quitar tarea", f
  %br.clear

