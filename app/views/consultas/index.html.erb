<h1>Busquedas realizadas</h1>

<%= link_to "Nueva busqueda", busquedas_path, :class => 'new' %>

<table class="decorated">
  <tr>
    <th></th>
    <th>Busqueda</th>
    <th>Usuario</th>
    <th>Fecha</th>
    <th>Resultados</th>
    <th>Reporte</th>
    <th></th>
  </tr>

<% @consultas.each do |consulta| %>
  <tr>
    <td><%= check_box_tag "consultas[]", consulta.id %></td>
    <td><%=h  link_to consulta.busqueda, consulta %></td>
    <td><%=h consulta.usuario %></td>
    <td><%= l consulta.created_at, :format => :short %></td>
    <td><%=h consulta.consulta_detalles.size %></td>
    <td><%=h consulta.reporte %></td>
    <td>
      <%= link_to 'Borrar', consulta, :class => 'delete' %>
    </td>
  </tr>
<% end %>
</table>

