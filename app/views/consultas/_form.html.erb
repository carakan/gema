<% semantic_form_for(@consulta) do |f| %>
  <%= f.input :busqueda, :as => :hidden %>
  <%= f.input :parametros, :as => :hidden %>
  <table class="decorated">
  	<tr>
  		<th>Marca</th>
  		<th>Tipo</th>
  		<th>Clase</th>
      <th>Tipo de<br />busqeuda</th>
      <th>Comentario</th>
    </tr>
    <% f.fields_for :consulta_detalles do |cd| %>
      <tr>
      	<td><%= cd.object.marca %></td>
      	<td><%= tipo_busqueda cd.object.tipo %></td>
      	<td></td>
        <td></td>
        <td><%= cd.text_area :comentario, :rows => 3 %></td>
      </tr>
    <% end %>
  </table>
  <p>
    <%= f.submit 'Salvar' %>
  </p>
<% end %>
