<% semantic_form_for @representante do |f| -%>
  <% f.inputs do %>
  <%= f.input :nombre, :label => 'Nombre' %>
  <%= f.input :email, :label => 'Email' %>
  <%= f.input :direccion, :label => 'Dirección' %>
  <%= f.input :telefono, :label => 'Teléfono' %>
  <% end %>
  <%= f.submit "Salvar" %>
<% end -%>
