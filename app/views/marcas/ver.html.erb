<h1>Marca</h1>


<div id="marca">

  <div class="half fl" id="div1">
    <p>
      <label for="">Propia</label>
      <%= cambio @marca ,:propia %><br/>
    </p>
    
    <p>
      <label for="">Denominación</label>
      <%= cambio @marca ,:nombre %>
    </p>
    <p>
      <label for="">Estado</label>
      <%= cambio @marca ,:estado, Marca::ESTADOS[ @marca.estado ] %>
    </p>
    <p>
      <label for="">Tipo Marca</label>
      <%= cambio @marca, :tipo_marca_id, @marca.tipo_marca %>
    </p>
    <p>
      <label for="">Tipo signo</label>
      <%= cambio @marca ,:tipo_signo_id %>
    </p>
    <p>
      <label for="">Clase</label>
      <%= cambio @marca ,:clase %>
    </p>
   <p>
      <label for="">Numero Solicitud</label>
      <%= cambio @marca ,:numero_solicitud %>
    </p>
    <p>
      <label for="">Fecha</label>
      <%= cambio @marca ,:estado_fecha, lo( @marca.estado_fecha ) %>
    </p>
    <p>
      <label for="">Fecha de modificación</label>
      <%= l @marca.updated_at, :format => "%d, %B %Y %H:%M" %>
    </p>

    <p>
      <label for="">Usuario</label>
      <%= cambio @marca, :usuario_id %>
    </p>

  </div>


  <div class="half fl" id="div2">
   <%= content_tag 'p', mostrar_imagen(@marca) %>
    <p>
      <label for="">Titulares</label>
      <%= cambio @marca, :titular_ids_serial, @marca.titulares.map(&:nombre).join(", ") %>
    </p>
    <p>
      <label for="">Agentes</label>
      <%= cambio @marca, :agente_ids_serial, @marca.agentes.map(&:nombre).join(", ") %>
    </p>
    <p>
      <label>Apoderado</label>
      <%= cambio @marca, :apoderado %>
    </p>

    <p>
      <label for="">Número de gaceta</label>
      <%= cambio @marca ,:numero_gaceta %>
    </p>
    <p>
      <label for="">Número de publicación</label>
      <%= cambio @marca ,:numero_publicacion %>
    </p>
    <p>
      <label for="">Fecha de publicación</label>
      <%= cambio @marca ,:fecha_publicacion %>
    </p>
    <p>
      <label for="">Productos</label>
      <%= cambio @marca ,:productos %>
    </p>



  </div>

  <!---->



</div>

<div style="clear:both"></div>

