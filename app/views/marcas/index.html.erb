<%= link_to "Listado", marcas_path %>
<% form_tag marcas_path, :method => :get  do %>
  <%= text_field_tag :nombre_marca %>
  <%= submit_tag "Buscar" %>
<% end %>

<%= @will = will_paginate @marcas %>

<table class="decorated">
	<tr>
    <th><%= sort_order "Nombre", "marcas.nombre" %></th>
    <th><%= sort_order "Marca <br />Propia","marcas.propia" %></th>
		<th>Estado</th>
    <th><%= sort_order "Tipo de signo", "tipo_signos.nombre" %></th>
    <th><%= sort_order "Clase", "marcas.clase_id" %></th>
    <th><%= sort_order "Activa", "marcas.activa" %></th>
    <th>Titulares</th>
    <th></th>
	</tr>

  <% @marcas.each do |marca| %>
    <%= tr_marca marca %>
      <td><%= link_to marca.nombre, marca_path(marca) %></td>
      <td class="<%= marca.propia %>"></td>
    	<td><%= marca.ver_estado %></td>
      <td><%= marca.tipo_signo %></td>
      <td><%= marca.clase.try(:codigo) %></td>
      <td class="<%= marca.activa %>"></td>
      <td><%= marca.titulares.map(&:nombre).join(", ") %></td>
      <td>
        <%= link_to "editar", edit_marca_path(marca), :class => 'edit' %>
        <%= link_to "borrar", marca_path(marca), :class => 'delete' %>
      </td>
    </tr>
  <% end %>
</table>

<%= @will %>
