<h2 class="title">Ultimos comentarios</h2>
<div class="comments">
  <ul>
  <% @marca.ultimos_posts.each do |p| %>
    <li>
    <h3><%= p.titulo %></h3>
    <%= adjuntos p.adjuntos %> Por <strong><%= p.usuario %></strong><br /> 
    <em><%= l p.created_at, :format => "%d, %B %Y %H:%M" %></em>
    <p>
      <%= p.comentario %>
    </p>
    <%= link_to "borrar", p, :class => 'delete' if UsuarioSession.current_user[:id] == p.usuario_id %>
    </li>
  <% end %>
  </ul>
  <%= link_to "Ver_mas", posts_path(:marca_id => @marca.id), :class => 'ajax list' %>
</div>

