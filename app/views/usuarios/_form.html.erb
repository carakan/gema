<%= semantic_form_for(@usuario, :url => usuario_form_path(@usuario)) do |f| %>
  <%= f.semantic_errors %>
    <%= f.input :email, :label => 'Email' %>
    <%= f.input :nombre, :label => 'Nombre' %>
    <%= f.input :login, :label => 'Nombre de usuario' %>
    <%= f.input :rol, :collection => Rol.find(:all, :conditions=>"name!='admin'" )%>
    <%# unless edit_usuario? -%>
      <%= f.input :password, :as => :password, :label => 'Contraseña' %>
      <%= f.input :password_confirmation, :as => :password, :label => 'Confirmar contraseña' %>
  <%= f.submit 'Salvar' %>
<% end %>
