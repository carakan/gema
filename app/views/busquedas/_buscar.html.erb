<form action="/busquedas" method="get">
  <%= text_field_tag :busqueda, params[:busqueda], :size => 40 %>

  <div style="clear:both"></div>

  <div class="half fl">
    <label for="clases">Clases</label>
    <select id="clases" name="clases">
      <%= options_for_select(BusquedaVacia.options, params[:clases]) %>
    </select>
    <input id="oneclass" name="una_clase" type="input" value="" style="display:none"/>
  </div>


  <div class="half fl">
    <label for="">Tipo de busqueda</label>
    <label for=""><input id="tipo_busqueda_prev" name="tipo_busqueda" type="radio" value="prev" /> Preventiva</label>
    <label for=""><input id="tipo_busqueda_prep" name="tipo_busqueda" type="radio" value="prep" /> Prepublicaci√≥n</label>

    <div id="fechas" style="display:none">
        <label for="">Fechas</label>
        <input id="fecha_ini" name="fecha_ini" type="text" class="date" value="<%= params[:fecha_ini] %>" />
        <input id="fecha_fin" name="fecha_fin" type="text" class="date" value="<%= params[:fecha_fin] %>" />
    </div>
  </div>

  <div style="clear:both"></div>

  <input type="submit" value="Buscar" />
</form>

<script type="text/javascript">
  $(document).ready(function() {
      $('input[name=tipo_busqueda]').click(function() {
        if( $(this).val() == 'prep' ) {
          $('#fechas').show();
        }else{
          $('#fechas').hide();
        }
      });
  });
</script>

<script type="text/javascript">
  $(document).ready(function() {
      $('select[name=clases]').click(function() {
        if( $(this).val() == 'Una sola' ) {
          $('#oneclass').show();
        }else{
          $('#oneclass').hide();
        }
      });
  });
</script>
