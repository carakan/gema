<h1>Listing posts</h1>

<table>
  <tr>
    <th>Marca</th>
    <th>Usuario</th>
    <th>Titulo</th>
    <th>Comentario</th>
    <th>Accesso</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%=h post.marca_id %></td>
    <td><%=h post.usuario_id %></td>
    <td><%=h post.titulo %></td>
    <td><%=h post.comentario %></td>
    <td><%=h post.accesso %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New post', new_post_path %>