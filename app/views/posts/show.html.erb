<li class="post">
  <h3><%= @post.categoria %></h3>
  <h4><%= @post.titulo %></h4>
  <p>
    <%= @post.comentario %>
  </p>
  Por <strong><%= @post.usuario %></strong><br /> 
  <em><%= l @post.created_at, :format => "%d, %B %Y %H:%M" %></em>
    <ul>
      <% @post.adjuntos.each do |a| %>
        <li class="mime">
        <%= link_to "<strong>#{ a.archivo_file_name }</strong> (#{ a.archivo_file_size.to_byte_size})".html_safe, adjunto_path(a), :class => a.tipo %>
        </li>
      <% end %>
    </ul>
</li>
