<h1>Importacion</h1>
<div class="clear"></div>
<h2 class="dark"><%= gaceta @importacion %> <%= fecha_hora @importacion.created_at %> </h2>

    <%= link_to "Listado", importacion_path(@importacion), :class => 'list' %>

<div class="pad-tb">
  <% form_tag importacion_path(@importacion), :method => :get  do %>
    <%= text_field_tag :nombre_marca %>
    <%= submit_tag "Buscar" %>
  <% end %>
</div>

<table class="decorated">
	<tr>
    <%= '<th>Fila</th>' if @mostra_fila %>
		<th>Marca</th>
    <th>Numero<br />Solicitud</th>
		<th>Tipo Signo</th>
		<th>Clase</th>
    <th>Titulares</th>
    <th></th>
    <% @marcas.each do |marca| %>
      <%= tr_marca marca %>
        <%= "<td>#{marca.fila}</td>" if @mostra_fila %>
        <td><%= link_to marca.nombre, ver_marca_path(marca), :class => 'ajax' %></td>
        <td><%= marca.numero_solicitud %></td>
        <td><%= marca.tipo_signo %></td>
        <td><%= marca.clase_id %></td>
        <td><%= marca.try(:titulares).map(&:nombre).join(",") %></td>

        <td>
          <%= link_to "editar", edit_marca_path(marca, :importacion_id => @importacion.id), :class => 'edit' %>
          <%= link_to "borrar", marca, :class => 'delete' %>
        </td>
      </tr>
    <% end %>

	</tr>
</table>

<%= will_paginate @marcas %>
