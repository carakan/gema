<h1>Importacion de <%= fecha_hora @importacion.created_at %></h1>

<%= link_to "Listado", importacion_path(@importacion) %>
<% form_tag importacion_path(@importacion), :method => :get  do %>
  <%= text_field_tag :nombre_marca %>
  <%= submit_tag "Buscar" %>
<% end %>

<table class="decorated">
	<tr>
    <%= '<th>Fila</th>' if @mostra_fila %>
		<th>Marca</th>
		<th>Numero Solicitud</th>
		<th>Tipo Signo</th>
		<th>Clase</th>
    <th>VÃ¡lido</th>
    <th>Propia</th>
    <th></th>
    <% @marcas.each do |marca| %>
      <% @css = marca.propia ? 'propia': '' %>
      <% unless marca.valido %>
          <% @css << ' error' %>
         <tr class="<%= @css %>" alt="<%= marca.presentar_errores %>">
      <% else %>
        <tr class="<%= @css %>" >
      <% end %>
        <%= "<td>#{marca.fila}</td>" if @mostra_fila %>
        <td><%= marca.nombre %></td>
        <td><%= marca.numero_solicitud %></td>
        <td><%= marca.tipo_signo %></td>
        <td><%= marca.clase %></td>
        <td><%= verdad marca.valido %></td>
        <td><%= verdad marca.propia %></td>

        <td>
          <%= link_to "editar", edit_marca_path(marca, :importacion_id => @importacion.id), :class => 'edit' %>
          <%= link_to "borrar", marca, :class => 'delete' %>
        </td>
      </tr>
    <% end %>

	</tr>
</table>

<%= will_paginate @marcas %>
