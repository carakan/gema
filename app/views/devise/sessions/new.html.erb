<h1>Ingreso</h1>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="input">
    <%= f.label :login, 'Usuario' %>
    <%= f.text_field :login %>
  </div>

  <div class="input">
    <%= f.label :password, 'ContraseÃ±a' %>
    <%= f.password_field :password %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me, 'Recordarme' %></p>
  <% end -%>

  <p><%= f.submit "Ingresar" %></p>
<% end %>

