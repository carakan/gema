%table.decorated
  %tr
    %td
      #tabshome{:style=>'font-size:11px;'}
        %ul
          %li
            %a{:href=>'#tabshome-1'}
              Tareas Pendientes Revisi贸n
          %li
            %a{:href=>'#tabshome-2'}
              Tareas Asignadas Pendientes
          %li
            %a{:href=>'#tabshome-3'}
              Tareas Mias Pendientes
        #tabshome-1
          %p
            %table
              %tr
                %th Fecha Limite
                %th Tarea
              - @proyectos.each do |proy|
                - proy.instruccions.each do |proyinstruccions|
                  - proyinstruccions.revision_tareas.each do |instareas|
                    %tr
                      %td= instareas.fecha_limite
                      %td= link_to instareas.tarea, ver_entrega_proyecto_proyecto_instruccion_instruccion_detall_path(proy, proyinstruccions, instareas) 
        #tabshome-2
          %p
            %table
              %tr
                %th Fecha Limite
                %th Descripci贸n
              - for proyt in @proyectos
                %tr
                - for proyitem in proyt.proyecto_items.find(:all, :order=>'fecha_limite ASC', :limit=>1)
                  %td= proyitem.fecha_limite
                  %td= proyt.titulo
        #tabshome-3
          %p
            %table
              %tr
                %th Fecha Limite
                %th Descripci贸n
              - for proyect in @proyectos
                %tr
                - for proyitems in proyect.proyecto_items.find(:all, :order=>'fecha_solicitud ASC', :limit=>1)
                  %td= proyitems.fecha_limite
                  %td= proyect.titulo

  %tr
    %td{:colspan=>2}
      %h3
        Proyectos Pendientes
      %table{:border=>1}
        %tr
          %th Proyecto
          %th Agente
          %th Descripci贸n
          %th Fecha Limite
        - for proyecto in @proyectos
          %tr
            %td= proyecto.id
            %td= link_to proyecto.representante, proyecto 
            %td= proyecto.titulo
            -for proyitem in proyecto.proyecto_items.find(:all, :order=>'fecha_limite ASC', :limit =>1 )
              %td= proyitem.fecha_limite
            

